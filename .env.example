# ============================================
# SYNAPSE-SYNCHRONY SERVER ENVIRONMENT VARIABLES
# ============================================

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/synapse-synchrony
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/synapse-synchrony?retryWrites=true&w=majority

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
# Generate strong secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your-super-secret-access-token-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this-in-production

# Google OAuth 2.0 Credentials
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Frontend URL (for CORS and redirects)
CLIENT_URL=http://localhost:5173

# SMS/OTP Service Configuration (Optional - for production)
# Twilio credentials (example)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# Email Service Configuration (Optional - for email verification)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-specific-password

# Security Settings
# BCRYPT_ROUNDS=12 (default is 12)
# SESSION_SECRET=your-session-secret-key

# Rate Limiting (Optional - override defaults)
# AUTH_RATE_LIMIT_WINDOW=15 (minutes)
# AUTH_RATE_LIMIT_MAX=10 (requests per window)
# OTP_RATE_LIMIT_WINDOW=5 (minutes)
# OTP_RATE_LIMIT_MAX=3 (requests per window)
